<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @patient.name %>
</p>

<p>
  <strong>Age:</strong>
  <%= @patient.age %>
</p>

<p>
  <strong>Appointments</strong>
  <ul>
  <% @patient.appointments.each do |appt|%>
    <li>Appointment Time: <%=appt.appointment_datetime.strftime("%B %e, %Y at %R")%></li>
    <li>Doctor: <%=link_to appt.doctor.name, doctor_path(appt.doctor)%></li>
  <%end%>
  </ul>
<%= link_to 'Edit', edit_patient_path(@patient) %> |
<%= link_to 'Back', patients_path %>
